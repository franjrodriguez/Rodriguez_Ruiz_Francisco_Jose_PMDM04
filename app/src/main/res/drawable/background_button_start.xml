<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Rojo transparente (50% de opacidad) -->
            <corners android:radius="300dp"/>
        </shape>
    </item>

    <!-- Estado por defecto (no presionado) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#77000000"/> <!-- Color original -->
            <corners android:radius="300dp"/>
        </shape>
    </item>
</selector>