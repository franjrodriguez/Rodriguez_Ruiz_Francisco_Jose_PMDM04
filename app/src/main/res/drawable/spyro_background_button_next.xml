<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/spyro_purple_transparent"/> <!-- Rojo transparente (66% de opacidad) -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Estado por defecto (no presionado) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/spyro_purple"/> <!-- Color original -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>