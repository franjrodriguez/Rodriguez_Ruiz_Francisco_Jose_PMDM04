<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Estado presionado -->
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <solid android:color="#77939393"/> <!-- Rojo transparente (66% de opacidad) -->
        <corners android:radius="200dp"/>
    </shape>
</item>

<!-- Estado por defecto (no presionado) -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="#FF939393"/> <!-- Color original -->
        <corners android:radius="200dp"/>
    </shape>
</item>
</selector>