<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo rectangular principal -->
    <item
        android:top="0dp"
        android:bottom="10dp"
        android:left="0dp"
        android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/spyro_yellow_transparent"
            <corners android:radius="15dp" />
            <stroke android:width="1dp" android:color="@color/spyro_yellow" />
        </shape>
    </item>

    <!-- Punta triangular en la parte inferior izquierda -->
    <item
        android:left="40dp"
        android:right="260dp"
        android:top="100dp"
        android:bottom="0dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="0%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <size
                    android:width="40dp"
                    android:height="40dp" />
                <solid android:color="@color/spyro_yellow_transparent" />
            </shape>
        </rotate>
    </item>
</layer-list>